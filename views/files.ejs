<!DOCTYPE html>
<html>
    <head>
        <title>Files</title>
        <script>
            const files = JSON.parse('<%- JSON.stringify(locals.files) %>');
            const members = JSON.parse('<%- JSON.stringify(locals.members) %>');
            const isAdmin = ('<%- JSON.stringify(locals.isAdmin) %>' == "true");
        </script>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;1,700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <script src = "/js/files.js" defer></script>
        <link href = "/css/files.css" rel="stylesheet">
    </head>
    <body>
        <nav>
            <img src = "/img/logo.png" onclick = 'window.location.href = "/"'>
            <div class="middle">
                <i class="fa fa-folder active" aria-hidden="true"></i>
                <i class="fa fa-envelope" aria-hidden="true"  onclick = "window.location=window.location.toString().replace('/files','/chat')"></i>
            </div>
            <div class="end">
                <img src = "/img/default2.png">
            </div>
        </nav>
        <div class="container">
            <div class="sidebar">
                <div>
                    <i class="fa fa-bullseye" aria-hidden="true" onclick = "window.location=window.location.toString().replace('/files','/goals')"></i>
                    Goals
                </div>
                <div>
                    <i class="fa fa-sticky-note-o" aria-hidden="true" onclick = "window.location=window.location.toString().replace('/files','/notes')"></i>
                    Notes
                </div>
                <div class = "active">
                    <i class="fa fa-file-archive-o" aria-hidden="true"></i>
                    Files
                </div>     
            </div>
            <div class="main">
                <div class = "addFile">
                    <span class="head">Files</span>
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <i class="fa fa-microphone" aria-hidden="true" onclick = listen()></i>
                </div>
                <div class="search">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    <input id = "searchBar" placeholder="Search">
                </div>
                <div class = "fileContainer">
                    <div class = "file">
                        <div class = "fileHead">
                            <span class = "fileTitle">certificate</span>
                            <i class="fa fa-download" aria-hidden="true"></i>
                        </div>
                        <div class = "fileExtension">
                            Extension: png
                        </div>
                        <div class="fileDate">
                            Date of upload: Started Wed, 05 Aug 2020 00:59:33 GMT
                        </div>
                    </div>
                    <div class = "file">
                        <div class = "fileHead">
                            <span class = "fileTitle">design.xd</span>
                            <i class="fa fa-download" aria-hidden="true"></i>
                        </div>
                        <div class="date">
                            Date of upload: Started Wed, 06 Aug 2020 00:59:33 GMT
                        </div>
                    </div>
                </div>
            </div>
            <div id="members">
                <div id = 'memberContainer'>

                </div>    
            </div>
        </div>
        <div class = "modal">
            <div class = "fileForm">
                <i class="fa fa-times-circle" aria-hidden="true"></i>
                <span class = "head">Upload File</span>
                <div class="divider"></div>
                <form method="POST" enctype="multipart/form-data">
                    <input type="text" name = "name" placeholder = "Enter file name">
                    <input type="file" name="file">
                    <input type="submit" value="Upload"> 
                </form>
            </div>
        </div>
        
    </body>
</html>